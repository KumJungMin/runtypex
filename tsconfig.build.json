{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist/esm",
    "rootDir": "./src",
    "module": "ESNext",
    "target": "ESNext",
    "declaration": true,
    "declarationDir": "./dist/esm",
    "moduleResolution": "Bundler",
    "isolatedModules": true
  },
  "include": ["src"],
  "exclude": [
    "tests",
    "**/*.test.ts",
    "**/__tests__/**",
    "jest.config.cjs"
  ]
}
